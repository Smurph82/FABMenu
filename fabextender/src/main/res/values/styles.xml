<resources>

    <style name="FabExtender" parent="Theme.AppCompat.Light" >
        <item name="circleColor">?android:colorAccent</item>
        <item name="circleSize">mini</item>
    </style>

    <style name="FabExtender.CircleColorImageView">
        <item name="android:padding">8dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="FabExtender.CircleColorImageView.Vertical">
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="FabExtender.CircleColorImageView.Horizontal">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="FabExtender.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/text_background_shade</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FabExtender.TextView.Vertical">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="FabExtender.TextView.Horizontal">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

</resources>
